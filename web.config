<configuration>
    <system.webServer>
        <handlers>
            <add name="iisnode" path="core/server.js" verb="*" modules="iisnode" />
        </handlers>
        <iisnode loggingEnabled="true" />

        <rewrite>
            <rules>
                <rule name="myapp">
                    <match url="/*" />
                    <action type="Rewrite" url="core/server.js" />
                </rule>
            </rules>
        </rewrite>
    </system.webServer>
</configuration>